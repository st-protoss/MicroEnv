<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="健康状况："
        android:layout_margin="10dp"/>
    <RadioGroup
        android:id="@+id/situation_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/situation_good"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="优"/>
        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/situation_mid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="良"/>
        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/situation_bad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="疾病"/>
    </RadioGroup>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="健康状况描述："
        android:layout_margin="10dp"/>
    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/health_description"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_height="wrap_content"
        android:minLines="4"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:gravity="top|left"
        android:inputType="textMultiLine"
        android:hint="请输入对于今日身体状况的描述"
        android:textColorHint="@color/bg_color"
        android:textSize="12sp"
        android:textColor="#fff"
        android:background="@drawable/bg_text_area"
        />

</LinearLayout>